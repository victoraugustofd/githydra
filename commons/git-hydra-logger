
# Loading source files
. bash-commons

info() {
    log ${LIGHT_BLUE} "INFO" "$@"
}

debug() {
    log ${GREEN} "DEBUG" "$@"
}

warn() {
    log ${YELLOW} "WARNING" "$@"
}

error() {
    log ${LIGHT_RED} "ERROR" "$@"
    exit 1
}

fatal() {
    log ${RED} "FATAL" "$@"
    exit 1
}

log() {
    local color=$1; shift
    local level=$1; shift
    local message=$1; shift

    echo -en "[${color}$level$NC] $(date +"%Y-%m-%d %H:%M:%S.%3N"): $message" >&2
}
